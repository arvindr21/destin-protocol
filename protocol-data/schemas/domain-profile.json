{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://destin-protocol.org/schemas/domain-profile.json",
  "title": "DESTIN Domain Profile",
  "description": "Schema for domain-specific configuration including CADM modes and trait weights",
  "type": "object",
  "version": "0.1.0",
  "required": ["domain", "default_modes", "trait_weights"],
  "properties": {
    "domain": {
      "type": "string",
      "description": "Domain tag identifier",
      "enum": [
        "general",
        "law",
        "finance",
        "medicine",
        "education",
        "science",
        "governance",
        "negotiation",
        "news",
        "cooking",
        "home-automation",
        "commerce",
        "psychology",
        "arts",
        "ethics"
      ]
    },
    "default_modes": {
      "type": "array",
      "description": "Default CADM dialogue modes for this domain",
      "items": {
        "type": "string",
        "enum": ["resolution", "synthesis", "debate"]
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "trait_weights": {
      "type": "object",
      "description": "Relative weights for ARF traits in this domain",
      "additionalProperties": {
        "type": "number",
        "minimum": 0.0,
        "maximum": 3.0,
        "description": "Trait weight multiplier (0.0 = disabled, 1.0 = normal, >1.0 = amplified)"
      },
      "propertyNames": {
        "enum": [
          "accuracy",
          "helpfulness",
          "integrity",
          "civility",
          "responsiveness",
          "self_awareness",
          "consistency",
          "transparency",
          "cooperativeness",
          "humility",
          "efficiency",
          "neutrality",
          "intent_alignment",
          "graceful_degradation",
          "adaptivity",
          "explainability",
          "trust_calibration"
        ]
      },
      "minProperties": 1
    },
    "scoring_modifiers": {
      "type": "object",
      "description": "Optional domain-specific scoring behavior overrides",
      "properties": {
        "decay_rates": {
          "type": "object",
          "description": "Trait-specific decay rate overrides",
          "additionalProperties": {
            "type": "string",
            "enum": [
              "linear-0.001",
              "linear-0.003",
              "linear-0.005",
              "exp-0.005",
              "exp-0.008",
              "exp-0.01"
            ]
          }
        },
        "audit_sensitivity": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Threshold for triggering audit events (0.0 = disabled, 1.0 = maximum sensitivity)"
        },
        "trust_thresholds": {
          "type": "object",
          "description": "Minimum trust scores for various roles",
          "properties": {
            "facilitator": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "description": "Minimum influence score to qualify as facilitator"
            },
            "validator": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "description": "Minimum influence score to qualify as validator"
            },
            "meta_agent": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "description": "Minimum influence score to qualify as meta-agent"
            }
          }
        }
      },
      "additionalProperties": false
    },
    "volatility_score": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Normalized indicator of how often domain shifts classification due to disagreement",
      "default": 0.1
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "domain": "law",
      "default_modes": ["resolution"],
      "trait_weights": {
        "integrity": 1.2,
        "explainability": 1.1,
        "helpfulness": 0.9,
        "efficiency": 0.7
      },
      "scoring_modifiers": {
        "trust_thresholds": {
          "facilitator": 0.8,
          "validator": 0.9
        }
      },
      "volatility_score": 0.05
    },
    {
      "domain": "governance",
      "default_modes": ["synthesis"],
      "trait_weights": {
        "civility": 1.3,
        "intent_alignment": 1.2,
        "cooperativeness": 1.1,
        "transparency": 1.0
      },
      "volatility_score": 0.3
    }
  ]
}
